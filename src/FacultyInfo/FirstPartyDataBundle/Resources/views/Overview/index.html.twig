{% extends "::frame.html.twig" %}

{% block title %}{% trans %}firstParty.title{% endtrans %}{% endblock %}
{% block header %}{% trans %}firstParty.header{% endtrans %}{% endblock %}
{% block subheader %}{% trans %}firstParty.subheader{% endtrans %}{% endblock %}

{% block breadcrumb %}
	{{ include(':Breadcrumb:start.html.twig') }}
	{{ include(':Breadcrumb:current.html.twig', {'title': 'firstParty.title', 'target': url('facultyinfo_firstparty_overview') }) }}
{% endblock %}

{% block menu %}
	{{ include('::menuItemCurrent.html.twig', {'url': url('facultyinfo_firstparty_overview'), 'label': 'menu.firstParty.label', 'tooltip': 'menu.firstParty.tooltip' }) }}
	{{ include('::menuItem.html.twig', {'url': url('facultyinfo_thirdparty_overview'), 'label': 'menu.thirdParty.label', 'tooltip': 'menu.thirdParty.tooltip' }) }}
	{{ include('::menuItem.html.twig', {'url': url('facultyinfo_user_overview'), 'label': 'menu.user.label', 'tooltip': 'menu.user.tooltip' }) }}
{% endblock %}

{% block content %}
	<ul class='grid row3 services' style="margin-top: 20px;">
        {{ include('FacultyInfoFirstPartyDataBundle:Overview:item.html.twig', {'icon' : asset('img/modules/mapmarker.png'), 'nameTrans' : 'firstParty.mapmarker.name', 'name' : mapmarker.name} ) }}
		{{ include('FacultyInfoFirstPartyDataBundle:Overview:item.html.twig', {'icon' : asset('img/modules/businesshours.png'), 'nameTrans' : 'firstParty.businesshours.name', 'name' : businesshours.name} ) }}
		{{ include('FacultyInfoFirstPartyDataBundle:Overview:item.html.twig', {'icon' : asset('img/modules/contactperson.png'), 'nameTrans' : 'firstParty.contact.name', 'name' : 'contact'} ) }}
	</ul>
{% endblock %}
